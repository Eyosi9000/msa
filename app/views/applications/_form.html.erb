<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_with(model: application) do |form| %>
        <% if application.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>

            <ul>
              <% application.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="row form-group">
          <div class="col-1">
            <%= form.label :status, style: "display: block" %>
            <%= form.text_field :status , class: "form-control"%>
          </div>

          <div class="col-2">
            <%= form.label :payment_made, style: "display: block" %>
            <%= form.check_box :payment_made %>
          </div>

          <div class="col-2">
            <%= form.label :applicant_id, style: "display: block" %>
            <%= form.select :applicant_id, options_for_select(Applicant.all.map{|s|[s.first_name, s.id]})%>
          </div>


          <div class="col-3">
            <%= form.label :acadamic_announcement_id, style: "display: block" %>
            <%= form.select :acadamic_announcement_id, options_for_select(AcadamicAnnouncement.all.map{|s|[s.id, s.id]})%>
          </div>


          <div class="col-2">
            <%= form.submit class: "btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>